<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/tv"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:id="@+id/uploaded_image"
        android:layout_height="wrap_content"
        android:layout_above="@id/crop_details"
        android:layout_alignParentTop="true"
        android:alpha="0.8"
        android:src="@drawable/crop" />

    <TextView
        android:id="@+id/crop_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:padding="15dp"
        android:text="Scan Photo"
        android:textSize="22dp"/>

    <Button
        android:id="@+id/getmore_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/crop_details"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="45dp"
        android:background="@drawable/button"
        android:padding="15dp"
        android:text="Get More Information"
        android:textColor="#daf8e3" />

</RelativeLayout>